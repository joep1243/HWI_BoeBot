import TI.BoeBot;
import TI.PinMode;

public class RobotMain {
    public static void main(String[] args) {

        //zet led 0 uit.
        BoeBot.digitalWrite(4, false);

        while (true){
            //krijg status van 8
            boolean state = BoeBot.digitalRead(8);
            
            //4 aan
            if (state) {BoeBot.digitalWrite(4, true);
            //4 uit
            }else{BoeBot.digitalWrite(4, false);}
        }
    }}
