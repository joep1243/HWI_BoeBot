import TI.BoeBot;
import TI.PinMode;

public class RobotMain {

    public static void main(String[] args) {
        //zet led 0 uit.
        BoeBot.digitalWrite(4, false);

        while (true) {
            boolean state = BoeBot.digitalRead(8);
            //lees de knop uit
            BoeBot.digitalWrite(3, false);
            if (state) {
                //zet de led aan
                BoeBot.digitalWrite(4, true);
                BoeBot.wait(1300);
                //led uit
                BoeBot.digitalWrite(4, false);
                BoeBot.wait(700);
            } else {
                //zet de led uit
                BoeBot.digitalWrite(4, false);
                //zet led 1 aan zolang de knop niet word ingedrukt
                BoeBot.digitalWrite(3, true);
            }
        }
    }
}
